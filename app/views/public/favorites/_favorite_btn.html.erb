<% if site.favorited_by?(current_end_user) %>
  <%= link_to site_favorites_path(site), method: :delete, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true" style="color:red;"></i>
    <%= site.favorites.count %> いいね！
  <% end %>
<% else %>
  <%= link_to site_favorites_path(site), method: :post, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= site.favorites.count %> いいね！
  <% end %>
<% end %>