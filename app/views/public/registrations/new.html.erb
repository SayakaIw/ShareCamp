<div class="container">
  <div class="card mt-5 shadow-lg">
    <div class="card-body">
      <div class="mt-5 mx-auto" style="width: 300px;">
        <%= form_with model: @end_user, url: registration_path(resource_name), local: true do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>
          <h3 class="mb-3">新規登録はこちら</h3>

          <div class="field">
            <%= f.label :氏名 %><br>
            <%= f.text_field :name %>
          </div>
          <div class="field">
            <%= f.label :カナ氏名 %><br>
            <%= f.text_field :kana_name %>
          </div>
          <div class="field">
            <%= f.label :ニックネーム %><br>
            <%= f.text_field :nick_name %>
          </div>
          <div class="field">
            <%= f.label :メールアドレス %><br>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
          <div class="field">
            <%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :パスワード確認 %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="actions mt-3">
            <%= f.submit "新規登録",class: 'btn btn-success btn-md col-xs-3' %>
            <%= render "public/shared/links" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>