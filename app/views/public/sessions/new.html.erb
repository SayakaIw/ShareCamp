<div class="container">
  <div class="card mt-5 shadow-lg">
    <div class="card-body">
      <div class="mt-5 mx-auto" style="width: 300px;">
        <%= form_with model: @end_user, url: session_path(resource_name), local: true do |f| %>
          <h3 class="mb-3">ログインはこちら</h3>
          <div class="field">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions mt-3">
            <%= f.submit "ログイン",class: 'btn btn-primary btn-md col-xs-3' %>
            <%= render "public/shared/links" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
