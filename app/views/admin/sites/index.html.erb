<h1>Admin::Sites#index</h1>

<div class="container mt-3">
  <h3 class="text-center">Sites-information</h3>
  <div class="row">
    
    <div class="col-md-8 p-2">
      <% @sites.each do |site| %>
      <div class="card mb-3" style="max-width: 90%;">
        <div class="row no-gutters">
          <div class="col-md-4 d-flex align-items-center justify-content-center">
            <%= image_tag site.get_image(200,200) %>
          </div>
          <div class="col-md-7">
            <div class="card-body ml-3">
              <h5 class="card-title">
                <%= link_to admin_site_path(site) do %>
                  <%= site.name %>
                <% end %>
              </h5>
              <p class="card-text"><%= site.review %></p>
              <p class="card-text"><small class="text-muted">投稿日：<%= site.created_at.strftime('%Y/%m/%d') %><br>by：<%= site.end_user.nick_name %>さん</small></p>
            </div>
          </div>
        </div>
      </div>
      <% end %>
      <%= paginate @sites %>
    </div>
    
    <div class="col-md-4 p-2" style="background-color: #f5f5f5;">
      <h3 class="text-center mb-3">週刊いいね👍ランキング</h3>
      <% @all_ranks.each.with_index(1) do |site,i| %>
        第<%= i %>位<br>
        <%= site.name %><br>
        投稿者:
        <%= site.end_user.nick_name %><br>
        ❤いいね数️<%= site.favorites.count %><br>
        <br>
      <% end %>
    </div>
  </div>
</div>