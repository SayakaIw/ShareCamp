<div class="container mt-3" style= "height: 90vh">

  <h3>サイト名で検索</h3>

    <% if admin_signed_in? %>
      <%= form_with url: admin_searches_search_path, local: true, method: :get do |f| %>
        <%= f.text_field :content %>
        <%= f.select :model, options_for_select({ "EndUser" => "end_user", "Site" => "site" }) %>
        <%= f.select :method, options_for_select({"完全一致"=>"perfect", "前方一致"=>"forward",  "後方一致"=>"backward", "部分一致"=>"partial"}) %>
        <%= f.submit '検索' %>
      <% end %>
    <% end %>
</div>